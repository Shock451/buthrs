<!--================ Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-left">
                <h2>{{category.name}}s</h2>
                <div class="page_link">
                    <a href="/">Home</a>
                    <a href="/person/{{category.url}}">{{category.name}}s</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="button-area">
    <div class="container border-top-generic">
        <div class="button-group-area text-center">
            <a href="/person/create/{{category.url}}" class="genric-btn primary">Create {{category.name}}</a>
            <a href="/person/find/{{category.url}}" class="genric-btn success">Find a {{category.name}}</a>
        </div>
    </div>
</section>
{{#if people.length}}
<div class="container">
    <div class="section-top-border">
        <h3 class="mb-30 title_color text-center">All {{category.name}}s</h3>
        <div class="progress-table-wrap">
            <div class="progress-table">
                <div class="table-head">
                    <div class="serial">ID</div>
                    <div class="country">Name</div>
                    <div class="visit">Card Number</div>
                    <div class="visit">Age</div>
                    <div class="visit">Address</div>
                    <div class="visit">Contact</div>
                </div>
                
                {{#each people}}
                
                    <div class="table-row">
                        <div class="serial">{{this.id}}</div>
                        <div class="country">
                            {{this.name}}
                        </div>
                        <div class="visit">{{this.card}}</div>
                        <div class="visit">{{this.age}}</div>
                        <div class="visit small">{{this.address}}</div>
                        <div class="visit">{{this.contact}}</div>
                    </div>
                {{/each}}
            </div>
            <p class="sample-text text-center">Horizontal scroll/swipe supported. </p>
        </div>
    </div>
</div>
{{else}}
<p class="sample-text text-center">0 records found</p>
{{/if}}
