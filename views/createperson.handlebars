<!--================ Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-left">
                <h2>{{category.name}}</h2>
                <div class="page_link">
                    <a href="/">Home</a>
                    <a href="/person/{{category.url}}">{{category.name}}</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!--================End Banner Area =================-->
<div class="container">
    <div class="section-top-border">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h3 class="mb-30 title_color">New {{category.name}}</h3>
                <a style="background: none; padding: 0;" href="/person/find/{{category.url}}" class="genric-btn link">Find a {{category.name}} record instead</a>
                <form action="/patients" method="POST">
                    <b> Personal Information </b><br>
                    <div class="mt-10">
                        <input type="text" name="id" placeholder="ID: Required" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'ID: Required'" required class="single-input">
                    </div>
                    <input name="category" type="text" value="{{category.url}}" hidden>
                    <div class="mt-10">
                        <input type="text" name="name" placeholder="Full Name: Required" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Full Name: Required'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="number" name="age" placeholder="Age: Required" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Age: Required'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="card" placeholder="Card Number (Hospital): Required"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Card Number (Hospital): Required'"
                            required class="single-input">
                    </div>
                    <div class="input-group-icon mt-10">
                        <div class="icon">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </div>
                        <input type="text" name="contact" placeholder="Phone Number: Required" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Phone Number: Required'" required class="single-input">
                    </div>
                    <div class="input-group-icon mt-10">
                        <div class="icon">
                            <i class="fa fa-thumb-tack" aria-hidden="true"></i>
                        </div>
                        <input type="text" name="address" placeholder="House Address: Required" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'House Address: Required'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <div class="form-select" id="default-select">
                            <select name="marital">
                                <option value="">Marital Status</option>
                                <option value="Single">Single</option>
                                <option value="Divorced">Divorced</option>
                                <option value="Married">Married</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-10">
                        <input type="text" name="occupation" placeholder="Occupation" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Occupation'" class="single-input">
                    </div>
                    <br><br> <b> Next of Kin </b> <br>
                    <div class="mt-10">
                        <input type="text" name="nok_name" placeholder="Next of Kin" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Next of Kin'" class="single-input">
                    </div>
                    <div class="input-group-icon mt-10">
                        <div class="icon">
                            <i class="fa fa-thumb-tack" aria-hidden="true"></i>
                        </div>
                        <input type="text" name="nok_address" placeholder="Next of Kin Address"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Next of Kin Address'"
                            class="single-input">
                    </div>
                    <div class="input-group-icon mt-10">
                        <div class="icon">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </div>
                        <input type="text" name="nok_contact" placeholder="Next of Kin Contact"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Next of Kin Contact'"
                            class="single-input">
                    </div>
                    <br> <br> <b> Vitals Information </b> <br>
                    <div class="mt-10">
                        <input type="text" name="height" placeholder="Height (cm)" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Height'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="weight" placeholder="weight (kg)" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Weight'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="temperature" placeholder="Temperature (°C)"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Temperature (°C)'"
                            class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="pulse" placeholder="Pulse" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Pulse'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="respiratory" placeholder="Respiratory" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Respiratory'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="sugarlevel" placeholder="Sugar Level" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Sugar Level'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="BMI" placeholder="Body Mass Index" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Body Mass Index'" class="single-input">
                    </div>

                    <br><br> <b> Medical Information </b> <br>
                    <div class="mt-10">
                        <input type="text" name="bloodgroup" placeholder="Blood Group" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Blood Group'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="genotype" placeholder="Genotype" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Genotype'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="allergies" placeholder="Allergies" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Allergies'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="asthmatic" placeholder="Asthmatic" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Asthmatic'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="additional" placeholder="Any related health issue"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Any related health issue'"
                            class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="handicap" placeholder="Handicap" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Handicap'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="addiction" placeholder="Addictions" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Addictions'" class="single-input">
                    </div>
                    <br> <br> <b> Medical History </b> <br>
                    <div class="mt-10">
                        <input type="text" name="pastillness" placeholder="Past Illness" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Past Illness'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="familyhealthhistory" placeholder="Family health history"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Family health history'"
                            class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="sti" placeholder="STI/STD" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'STI/STD'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="complaints" placeholder="Complaints" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Complaints'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="diagnosis" placeholder="Diagnosis" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Diagnosis'" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="recommendation" placeholder="Doctor's Recommendation"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Doctor's Recommendation'"
                            class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="treatment" placeholder="Treatment" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Treatment'" class="single-input">
                    </div>

                    <div class="button-group-area">
                        <button type="submit" class="genric-btn primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>